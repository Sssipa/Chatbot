{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "App/*": ["app/*"],
      "Config/*": ["config/*"],
      "Contracts/*": ["contracts/*"],
      "Database/*": ["database/*"],
      "Helpers/*": ["helpers/*"],
      "Http/*": ["app/Http/*"],
      "Models/*": ["app/Models/*"],
      "Views/*": ["resources/views/*"],
      "@ioc:Adonis/*": ["node_modules/@adonisjs/*"],
      "#controllers/*": ["app/controllers/*"]
    }
  }
}